{
  "name": "@joyhouse/main",
  "version": "0.0.5",
  "private": true,
  "main": "electron/main.js",
  "description": "JoyHouse - A modern game platform",
  "author": {
    "name": "JoyHouse Team",
    "email": "hanyh2004@gmail.com"
  },
  "homepage": "https://github.com/JoyHouseLabs/joyhouse",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development vite build --watch & cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux -c.linux.target=AppImage",
    "server:dev": "ts-node -r reflect-metadata server/index.ts",
    "server:build": "tsc -p tsconfig.json",
    "server:start": "node dist/server/index.js"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@types/jsonwebtoken": "^9.0.9",
    "bcryptjs": "^3.0.2",
    "builder-util-runtime": "^9.3.1",
    "cors": "^2.8.5",
    "electron-log": "^5.4.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "element-plus": "^2.9.9",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "1.4.5-lts.2",
    "mysql2": "^3.14.1",
    "pg": "^8.15.6",
    "phaser": "^3.60.0",
    "pinia": "^2.1.6",
    "qiankun": "^2.10.16",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.23",
    "ulid": "^3.0.0",
    "vue": "^3.3.4",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.2.5",
    "yaml": "^2.7.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^20.5.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "terser": "^5.39.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^4.4.5",
    "vue-tsc": "^1.8.5"
  },
  "build": {
    "appId": "com.joyhouselabs.client",
    "productName": "JoyHouse",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "JoyHouseLabs",
      "repo": "joyhouse"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Game",
      "maintainer": "JoyHouse Team <hanyh2004@gmail.com>",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}