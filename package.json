{
  "name": "@joyhouse/main",
  "version": "0.0.4",
  "private": true,
  "main": "electron/main.js",
  "description": "JoyHouse - A modern game platform",
  "author": {
    "name": "JoyHouse Team",
    "email": "hanyh2004@gmail.com"
  },
  "homepage": "https://github.com/JoyHouseLabs/joyhouse",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development vite build --watch & cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux -c.linux.target=AppImage"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.1.7",
    "builder-util-runtime": "^9.3.1",
    "electron-store": "^8.1.0",
    "element-plus": "^2.9.9",
    "phaser": "^3.60.0",
    "pinia": "^2.1.6",
    "qiankun": "^2.10.16",
    "vue": "^3.3.4",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "terser": "^5.39.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vue-tsc": "^1.8.5"
  },
  "build": {
    "appId": "com.joyhouselabs.client",
    "productName": "JoyHouse",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "JoyHouseLabs",
      "repo": "joyhouse"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Game",
      "maintainer": "JoyHouse Team <hanyh2004@gmail.com>",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}